//- includes/modal/_get-quote.pug
// Contact modal content
.modal.fade#GetQuoteModal(tabindex="-1" role="dialog" aria-labelledby="GetQuoteModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h4.modal-title#GetQuoteModalLabel Contact us
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
          span.sr-only Close

      .modal-body
        p Please, be so kind, don't hesitate to contact us!
        .contactform#contactform
          form.form-horizontal#ajax-contact-form(action="#!")
            fieldset
              .note
              .load
              .form-group
                .col-sm-12.input
                  input.form-control#name(type="text" name="name" maxlength="50" placeholder="Your name" pattern="^[a-zA-Z][a-zA-Z-' ]{1,50}[a-zA-Z']{0,1}$" title="Please enter a valid name." required)
                  label(for="name") Name #[span.star-red *]

              .form-group
                .col-sm-12.input
                  input.form-control#email(type="email" name="email" maxlength="100" placeholder="Your email" pattern="^([a-z0-9_\.\-]+)@([a-z0-9\.\-]+){2,255}\.([a-z]+){2,10}$" title="Please enter a valid email" required)
                  label(for="email") Email #[span.star-red *]

              .form-group
                .col-sm-12.input
                  input.form-control#phone(type="tel" name="phone" maxlength="20" placeholder="Your phone" pattern="^(\+|0{2})?(\d{0,2}\s?)(\d{3}\s?)(\d{3}\s?)(\d{3})$" title="0000 000 000 or +40 000 000 000." required)
                  label(for="phone") Phone #[span.star-red *]

              .form-group
                .col-sm-12.input
                  input.form-control#subject(type="text" name="subject" maxlength="100" placeholder="Your subject" pattern=".{1,100}" title="Maximum 100 characters." required)
                  label(for="subject") Subject #[span.star-red *]

              .form-group
                .col-sm-12.input
                  textarea.form-control#message(name="message" rows="6" maxlength="600" placeholder="Your message" title="Maximum 600 characters." required)
                  label(for="message") Message #[span.star-red *]

              .form-group
                .col-sm-12.input
                  input.form-control#answer(type="text" name="answer" maxlength="1" placeholder="Correct answer?" pattern="4" title="Correct answer?" required)
                  label(for="answer") 5-2+1 #[span.star-red *]

              //- Spam Trap
              .form-group(style="display: none")
                .col-sm-12.input
                  input.form-control#foo(type="text" name="foo" autocomplete="off")
                  label(for="foo") Leave this field blank
              input(type="hidden" name="submitted" value="true")

      .modal-footer
        button.btn.btn-success#submit(type="submit") Send
        button.btn.btn-outline-danger#reset(type="reset") Cancel
        //- button.btn.btn-default(type="button" data-dismiss="modal") Close
