//- includes/forms/_contact-form.pug
//- Contact form
section.contact-form-section.text-center#contact-form-section
  .container
    .row
      .col-12
        h3.mb-5 Please, be so kind, don't hesitate to contact us!

    .row.no-gutters
      .col.col-md-8.offset-md-2
        //- the form result (success or error) will be rendered inside `.note`
        .note
        .load

        form.p-4.bg-gradient-dark.shadow-lg#contact-form(
          name="contact-form" method="POST" action="/thank-you.html" netlify-honeypot="bot-field" netlify)

          //- HONEYPOT FIELD
          .form-group.d-none
            .input
              label(for="bot-field") Donâ€™t fill this out if you're human
              input.form-control#bot-field(type="text" name="bot-field" autocomplete="off")

          .form-group
            .input
              label(for="name") Name #[span.required *]
              input.form-control#name(
                type="text" name="name" maxlength="50" placeholder="Your name"
                pattern="^[a-zA-Z][a-zA-Z-' ]{1,50}[a-zA-Z']{0,1}$" title="Please enter a valid name."
                aria-label="Your name" required)

          .form-group
            .input
              label(for="email") Email #[span.required *]
              input.form-control#email(
                type="email" name="email" maxlength="100" placeholder="Your email"
                pattern="^([a-z0-9_\\.\\-]+)@([a-z0-9\\.\\-]+){2,255}\.([a-z]+){2,10}$" title="Please enter a valid email"
                aria-label="Your email" required)

          .form-group
            .input
              label(for="phone") Phone #[span.required *]
              input.form-control#phone(
                type="tel" name="phone" maxlength="20" placeholder="Your phone"
                pattern="^(\\+|0{2})?(\\d{0,2}\\s?)(\\d{3}\\s?)(\\d{3}\\s?)(\\d{3})$" title="0000 000 000 or +40 000 000 000."
                aria-label="Your phone" required)

          .form-group
            .input
              label(for="subject") Subject #[span.required *]
              input.form-control#subject(
                type="text" name="subject" maxlength="100" placeholder="Your subject"
                pattern=".{1,100}" title="Maximum 100 characters."
                aria-label="Your subject" required)

          .form-group
            .input
              label(for="message") Message #[span.required *]
              textarea.form-control#message(
                name="message" rows="6" maxlength="600" placeholder="Your message" title="Maximum 600 characters."
                aria-label="Your message" required)

          .mt-5
            button.btn.btn-info(type="submit") Send
            button.btn.btn-outline-light(type="reset") Cancel
