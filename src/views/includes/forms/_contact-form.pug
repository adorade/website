//- includes/forms/_contact-form.pug
//- Contact form
section.contact#contact
  .container
    .row
      .col-12
        h4.text-center.mb-5 If you have any type of questions do not hesitate to contact us!

    .row.g-0.justify-content-center
      .col.col-md-8.col-hd-6

        .form-response.alert.shadow-lg.d-none

        form.needs-validation.p-4.shadow-lg#contact-form(
          name="contact-form" method="POST" action="/thanks/contact" netlify-honeypot="bot-field" netlify novalidate)

          input(type="hidden" name="form-name" value="contact-form")

          .d-none
            label.form-label(for="contact-bot-field") Don't fill this out if you're human
            input.form-control#contact-bot-field(type="text" name="bot-field" autocomplete="off")

          .mb-3.position-relative
            input.form-control#contact-name(
              type="text" name="name" maxlength="50" placeholder="Your name"
              pattern="^[a-zA-Z][a-zA-Z\\-' ]{1,50}[a-zA-Z']{0,1}$" autocomplete="name"
              title="Please enter a valid name." aria-label="Your name" required)
            label.form-label(for="contact-name") Name #[span(aria-label="required") *]
            .valid-feedback Looks good!
            .invalid-feedback Please enter a valid name.

          .mb-3.position-relative
            input.form-control#contact-email(
              type="email" name="email" maxlength="100" placeholder="Your email"
              pattern="^([a-z0-9_\\.\\-]+)@([a-z0-9\\.\\-]+){2,255}\.([a-z]+){2,10}$"
              autocomplete="email"
              title="Please enter a valid email" aria-label="Your email" required)
            label.form-label(for="contact-email") Email #[span(aria-label="required") *]
            .valid-feedback Looks good!
            .invalid-feedback Please enter a valid email.

          .mb-3.position-relative
            input.form-control#contact-phone(
              type="tel" name="phone" maxlength="20" placeholder="Your phone"
              pattern="^(\\+|0{2})?(\\d{0,2}\\s?)(\\d{3}\\s?)(\\d{3}\\s?)(\\d{3})$"
              autocomplete="tel"
              title="0123 456 789 or +40 123 456 789." aria-label="Your phone" required)
            label.form-label(for="contact-phone") Phone #[span(aria-label="required") *]
            .valid-feedback Looks good!
            .invalid-feedback Please enter a valid phone.

          .mb-3.position-relative
            input.form-control#contact-subject(
              type="text" name="subject" maxlength="100" placeholder="Your subject"
              pattern="^[a-zA-Z][a-zA-Z0-9\\-' ?!]{1,100}[a-zA-Z0-9'!?]{0,1}$"
              title="Maximum 100 characters." aria-label="Your subject" required)
            label.form-label(for="contact-subject") Subject #[span(aria-label="required") *]
            .valid-feedback Looks good!
            .invalid-feedback Please enter a valid subject.

          .mb-3.position-relative
            textarea.form-control#contact-message(
              name="message" rows="6" maxlength="600" placeholder="Your message"
              title="Maximum 600 characters." aria-label="Your message" required)
            label.form-label(for="contact-message") Message #[span(aria-label="required") *]
            .valid-feedback Looks good!
            .invalid-feedback Please enter a valid message.

          .form-check
            input.form-check-input#contact-terms-check(type="checkbox" value="" required)
            label.form-check-label(for="contact-terms-check") Agree to terms and conditions
            .valid-feedback Looks good!
            .invalid-feedback You must agree before submitting.

          .mt-4.d-flex.gap-3.justify-content-center
            button.btn.btn-info(type="submit" aria-label="Submit Contact") Submit
            button.btn.btn-secondary(type="reset" aria-label="Cancel Contact") Cancel
