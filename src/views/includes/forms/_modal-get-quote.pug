//- includes/forms/_modal-get-quote.pug
//- Contact modal content
.modal.fade#GetQuoteModal(tabindex="-1" role="dialog" aria-labelledby="GetQuoteModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h4.modal-title#GetQuoteModalLabel Contact us
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
          span.sr-only Close

      .modal-body
        p Please, be so kind, don't hesitate to contact us!

        //- the form result (success or error) will be rendered inside `.note`
        .note
        .load

        form.form-horizontal#modal-get-quote(
          name="modal-get-quote" method="POST" netlify-honeypot="bot-field"
          enctype="application/x-www-form-urlencoded" netlify)

          input(type="hidden" name="form-name" value="modal-get-quote")

          //- HONEYPOT FIELD
          .form-group.d-none
            .input
              label(for="bot-field") Donâ€™t fill this out if you're human
              input.form-control#bot-field(type="text" name="bot-field" autocomplete="off")

          .form-group
            .input
              label(for="modalname") Name #[span.required *]
              input.form-control#modalname(
                type="text" name="modalname" maxlength="50" placeholder="Your name"
                pattern="^[a-zA-Z][a-zA-Z-' ]{1,50}[a-zA-Z']{0,1}$" title="Please enter a valid name."
                aria-label="Your name" required)

          .form-group
            .input
              label(for="modalemail") Email #[span.required *]
              input.form-control#modalemail(
                type="email" name="modalemail" maxlength="100" placeholder="Your email"
                pattern="^([a-z0-9_\\.\\-]+)@([a-z0-9\\.\\-]+){2,255}\\.([a-z]+){2,10}$" title="Please enter a valid email"
                aria-label="Your email" required)

          .form-group
            .input
              label(for="modalphone") Phone #[span.required *]
              input.form-control#modalphone(
                type="tel" name="modalphone" maxlength="20" placeholder="Your phone"
                pattern="^(\\+|0{2})?(\\d{0,2}\\s?)(\\d{3}\\s?)(\\d{3}\\s?)(\\d{3})$" title="0000 000 000 or +40 000 000 000."
                aria-label="Your phone" required)

          .form-group
            .input
              label(for="modalsubject") Subject #[span.required *]
              input.form-control#modalsubject(
                type="text" name="modalsubject" maxlength="100" placeholder="Your subject"
                pattern=".{1,100}" title="Maximum 100 characters."
                aria-label="Your subject" required)

          .form-group
            .input
              label(for="modalmessage") Message #[span.required *]
              textarea.form-control#modalmessage(
                name="modalmessage" rows="6" maxlength="600" placeholder="Your message" title="Maximum 600 characters."
                aria-label="Your message" required)

      .modal-footer
        .w-100.text-center
          button.btn.btn-info#submit(type="submit") Send
          button.btn.btn-outline-danger#reset(type="reset") Cancel
