//- includes/forms/_modal-get-quote.pug
//- Contact modal content
.modal.fade#GetQuoteModal(tabindex="-1" role="dialog" aria-labelledby="GetQuoteModalLabel" aria-hidden="true")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        h4.modal-title#GetQuoteModalLabel Contact us
        button.close(type="button" data-dismiss="modal" aria-label="Close")
          span(aria-hidden="true") &times;
          span.sr-only Close

      .modal-body
        p Please, be so kind, don't hesitate to contact us!

        //- the form result (success or error) will be rendered inside `.form-response`
        .form-response.alert.shadow-lg.d-none

        form.needs-validation.bg-light#modal-get-quote(
          name="modal-get-quote" method="POST" action="/thanks/modal.html" netlify-honeypot="bot-field" netlify novalidate)

          //- HONEYPOT FIELD
          .form-group.d-none
            .input
              label(for="bot-field") Donâ€™t fill this out if you're human
              input.form-control#bot-field(type="text" name="bot-field" autocomplete="off")

          .form-group
            .input
              input.form-control#name(
                type="text" name="name" maxlength="50" placeholder="Your name"
                pattern="^[a-zA-Z][a-zA-Z-' ]{1,50}[a-zA-Z']{0,1}$"
                title="Please enter a valid name." aria-label="Your name" required)
              label(for="name") Name #[span.required *]
              .valid-feedback Looks good!
              .invalid-feedback Please enter a valid name.

          .form-group
            .input
              input.form-control#email(
                type="email" name="email" maxlength="100" placeholder="Your email"
                pattern="^([a-z0-9_\\.\\-]+)@([a-z0-9\\.\\-]+){2,255}\\.([a-z]+){2,10}$"
                title="Please enter a valid email" aria-label="Your email" required)
              label(for="email") Email #[span.required *]
              .valid-feedback Looks good!
              .invalid-feedback Please enter a valid email.

          .form-group
            .input
              input.form-control#phone(
                type="tel" name="phone" maxlength="20" placeholder="Your phone"
                pattern="^(\\+|0{2})?(\\d{0,2}\\s?)(\\d{3}\\s?)(\\d{3}\\s?)(\\d{3})$"
                title="0000 000 000 or +40 000 000 000." aria-label="Your phone" required)
              label(for="phone") Phone #[span.required *]
              .valid-feedback Looks good!
              .invalid-feedback Please enter a valid phone.

          .form-group
            .input
              input.form-control#subject(
                type="text" name="subject" maxlength="100" placeholder="Your subject"
                pattern=".{1,100}"
                title="Maximum 100 characters." aria-label="Your subject" required)
              label(for="subject") Subject #[span.required *]
              .valid-feedback Looks good!
              .invalid-feedback Please enter a valid subject.

          .form-group
            .input
              textarea.form-control#message(
                name="message" rows="6" maxlength="600" placeholder="Your message"
                title="Maximum 600 characters." aria-label="Your message" required)
              label(for="message") Message #[span.required *]
              .valid-feedback Looks good!
              .invalid-feedback Please enter a valid message.

          .form-group
            .form-check
              input.form-check-input#terms-check(type="checkbox" value="" required)
              label.form-check-label(for="terms-check") Agree to terms and conditions
              .valid-feedback Looks good!
              .invalid-feedback You must agree before submitting.

          .mt-4.text-center
            button.btn.btn-info(type="submit") Submit
            button.btn.btn-outline-dark(type="reset") Cancel

      .modal-footer
