//- includes/sections/_portfolio.pug
include ../../mixins/_carousel-portfolio

section.portfolio.text-center#portfolio
  .container
    .row
      .col-12
        h2.mb-0 Our work

    .row.mb-5
      .col-12
        .carousel.slide.carousel-fade#carouselPortfolio(data-ride="carousel")
          .carousel-indicators
            li.active(data-target="#carouselPortfolio" data-slide-to="0")
            li(data-target="#carouselPortfolio" data-slide-to="1")

          .carousel-inner
            .carousel-item.active
              +portPicture("webmagia", "WebMagia")
            .carousel-item
              +portPicture("unikorn", "UniKorn")

          a.carousel-control-prev(href="#carouselPortfolio" role="button" data-slide="prev" aria-label="Previous")
            span.carousel-control-prev-icon(aria-hidden="true")
          a.carousel-control-next(href="#carouselPortfolio" role="button" data-slide="next" aria-label="Next")
            span.carousel-control-next-icon(aria-hidden="true")

    .row
      .col-12
        p.mb-0: a.btn.btn-outline-orange(href="portfolio.html") See our work
