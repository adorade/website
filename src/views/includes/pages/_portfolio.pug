//- includes/pages/_portfolio.pug
include ../../mixins/_pictures

section.portfolio#portfolio-1
  .container
    .row.align-items-center
      .col-12.col-md-6.order-md-1
        +featuresPicture("portfolio", "unikorn", "png", "UniKorn")
      .col-12.col-md-6
        h3.my-4.mt-md-0.text-center.text-md-left UniKorn
        p.mb-0 Frontend framework for designing websites and web applications.
        p.mb-4.font-weight-bold #node #yarn #git #gulp #scss #es6 #pug
        .buttons-wrapper
          a.btn.btn-info.mr-2.outbound-link(
            href="https://uni.adorade.ro/" rel="noopener" target="_blank" aria-label="UniKorn online")
            //- i.fas.fa-external-link-alt.mr-2
            img.svg-inline--fa.mr-2#fa-external-link(src="fonts/svgs/solid/external-link-alt.svg" alt="external-link" inline)
            span.font-weight-bold Online
          a.btn.btn-light.outbound-link(
            href="https://github.com/adorade/unikorn" rel="noopener" target="_blank" aria-label="UniKorn github")
            //- i.fab.fa-github.mr-2
            img.svg-inline--fa.mr-2#fa-github(src="fonts/svgs/brands/github.svg" alt="github" inline)
            span.font-weight-bold GitHub

