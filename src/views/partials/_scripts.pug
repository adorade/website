block custom-js
  script#unikorn(defer src="js/vendor/unikorn.min.js")
  if entry.inline
    script#inline-script(defer src="js/script.min.js")
  else
    script#main-script(defer src="js/script-dev.js")

block cookie-consent
  if entry.inline
    script(
      src="https://cdn.jsdelivr.net/npm/cookieconsent@3.1.1/build/cookieconsent.min.js"
      integrity="sha384-xLPjH6nqG4p/2mu1KJ1t+4KqcvkyXVwBucQtyGK65lDNfKzECxGY/QEYWR+Wompr" crossorigin="anonymous")
    script.
      window.cookieconsent.initialise({
        "palette": {
          "popup": {
            "background": "#252e39"
          },
          "button": {
            "background": "#17a2b8"
          }
        },
        "theme": "classic",
        "type": "opt-out"
      });
