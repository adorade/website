//- modules/offcanvas/_offcanvas.pug
include ../../mixins/_menulink
include ../../mixins/_pictures

.offcanvas.offcanvas-start#main-menu(tabindex="-1" aria-labelledby="menuLogo")
  .offcanvas-header
    h5.menu-logo.mb-0#menuLogo
      +menuLogo("logo-drawer", "Adorade")
    button.btn-close(type="button" data-bs-dismiss="offcanvas" aria-label="Close Main Menu")

  .offcanvas-body
    ul.offcanvas-nav.nav.nav-pills.flex-column.mb-auto
      +menuLink(menu)

  .offcanvas-footer
    include ../../includes/misc/_copyright
