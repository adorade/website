//- modules/drawer/_drawer.pug
include ../../mixins/_drawer

.drawer.fade#drawer(tabindex="-1" role="dialog" aria-hidden="true")
  .drawer-dialog.drawer-dark(role="document")
    .drawer-content
      .drawer-header
        a.drawer-logo(href="./")
          picture.lozad-drawer.img-fluid(data-iesrc="images/logo/logo-adorade-drawer.png")
            source(type="image/webp" srcset="images/logo/logo-adorade-drawer.webp" media="all")
            source(type="image/png" srcset="images/logo/logo-adorade-drawer.png" media="all")
            noscript: img(src="images/logo/logo-adorade-drawer.png" alt="Adorade")
        button.close(type="button" role="button" data-dismiss="drawer" aria-label="Close")
          i.fas.fa-times
      .drawer-body
        ul.drawer-nav.fa-ul
          +drawerlink(menu)
