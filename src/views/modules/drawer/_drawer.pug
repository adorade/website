//- modules/drawer/_drawer.pug
include ../../mixins/_drawer
include ../../mixins/_pictures

.drawer.fade#drawer(tabindex="-1" role="dialog" aria-hidden="true")
  .drawer-dialog.drawer-dark(role="document")
    .drawer-content
      .drawer-header
        a.drawer-logo(href="./")
          +drawerLogo("logo-drawer", "Adorade")
        button.close(type="button" role="button" data-dismiss="drawer" aria-label="Close Drawer")
          //- i.fas.fa-times
          img.svg-inline--fa#fa-times(src="fonts/svgs/solid/times.svg" alt="times" inline)

      .drawer-body
        ul.drawer-nav.mb-auto.mb-3
          +drawerLink(menu)

      .drawer-footer
        include ../../includes/misc/_copyright
