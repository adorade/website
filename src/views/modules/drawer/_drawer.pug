          //- li.nav-item: a.nav-link(href="#!") #[span.fa-li #[i.fas.fa-history.fa-fw]] Story
          //- li.nav-item: a.nav-link(href="#!") #[span.fa-li #[i.fas.fa-info-circle.fa-fw]] About
          //- li.nav-item: a.nav-link(href="#!") #[span.fa-li #[i.fas.fa-image.fa-fw]] Portfolio
          //- li.nav-item: a.nav-link(href="#!") #[span.fa-li #[i.fas.fa-envelope.fa-fw]] Contact
      .drawer-footer
        include ../../includes/misc/_copyright
