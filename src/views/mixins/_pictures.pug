//- Carousel Items
//------------------------
//- Usage: +carouselPicture("name", "alt")
mixin carouselPicture(name, alt)
  picture.carousel-picture
    source(type="image/webp" srcset=`images/portfolio/${name}.webp` media="(min-width: 576px)")
    source(type="image/webp" srcset=`images/portfolio/${name}-min.webp`)
    source(type="image/png" srcset=`images/portfolio/${name}.png` media="(min-width: 576px)")
    source(type="image/png" srcset=`images/portfolio/${name}-min.png`)
    img.lazy-carousel.carousel-img(
      loading="lazy" data-src=`images/portfolio/${name}.png` alt=alt)

